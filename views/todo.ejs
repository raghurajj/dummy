<html>
<head>
    <title> ToDo App </title>
    <link href="/static/style.css" rel="stylesheet">
    <script>

        function markIncomplete() {
            document.getElementById("todoForm").method = "post";
            document.getElementById("todoForm").action =
                document.getElementById("todoForm").action + "/:" +
                document.querySelector('input[name="todo"]:checked').value;
            document.getElementById("todoForm").submit();
        }
        function markComplete() {
            document.getElementById("done").value = "true";


            markIncomplete();
        }
    </script>
</head>

<body>
    <div class="todo-container">
        <h2> ToDo App </h2>
        <div class="todo">
            <form action="/todos" id="todoForm" method="POST">
                <input type="text" name="newtodo" placeholder="add new
todo">
                <button type=submit> Add Todo </button>
                <input type="hidden" id="done" name="done" value="false">
                <h2> ToDo List </h2>
                <% for( var i = 0; i < todos.length; i++) {
                    if(todos[i].done == true) { %>

                    <input type="checkbox" id="todo" name="todo" value="<%= todos[i]._id %>" /> <%= todos[i].title %> -
                    <font color="black"> Completed </font></br>

                    <% } else { %>
                    <input type="checkbox" id="todo" name="todo" value="<%= todos[i]._id %>" /> <%= todos[i].title %>
                    </br>

                    <% }
                } %>
                <button onclick="markComplete()" type="button"> Mark
                    Complete </button> <button onclick="markIncomplete()" type="button"> Mark Incomplete </button>
            </form>
        </div>
</body>

</html>